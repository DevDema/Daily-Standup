<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <gradient android:angle="0" android:startColor="#1DAE7D" android:endColor="#71CFC5" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <solid android:color="#1DDE7D" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <gradient android:angle="0" android:startColor="#1DDE7D" android:endColor="#72DFC5" />
        </shape>
    </item>
</selector>